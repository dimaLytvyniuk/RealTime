<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText android:layout_height="wrap_content" android:layout_width="100dp" app:layout_constraintStart_toEndOf="@+id/editTextX1" android:text="5" android:inputType="numberSigned|number|numberDecimal" android:ems="10" android:layout_marginLeft="18dp" android:layout_marginStart="18dp" android:id="@+id/editTextY1"/>
    <EditText android:layout_height="wrap_content" android:layout_width="100dp" android:text="1" android:inputType="numberSigned|number|numberDecimal" android:ems="10" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/editTextX1" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:layout_height="wrap_content" android:layout_width="100dp" app:layout_constraintTop_toBottomOf="@+id/editTextX1" app:layout_constraintStart_toEndOf="@+id/editTextX2" android:text="4" android:inputType="number|numberDecimal" android:ems="10" android:layout_marginLeft="18dp" android:layout_marginStart="18dp" android:id="@+id/editTextY2"/>
    <EditText android:layout_height="wrap_content" android:layout_width="100dp" app:layout_constraintTop_toBottomOf="@+id/editTextY1" android:text="2" android:inputType="number|numberDecimal" android:ems="10" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/editTextX2" app:layout_constraintStart_toStartOf="parent"/>
    <Button android:layout_height="39dp" android:layout_width="220dp" app:layout_constraintTop_toBottomOf="@+id/editTextY1" android:text="Button" android:layout_marginLeft="12dp" android:layout_marginStart="80dp" android:id="@+id/button" android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

</android.support.constraint.ConstraintLayout>